<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vehiclerentalapp.PaymentController" spacing="10" style="-fx-padding: 10;">
    <Label text="Payment Management" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <TableView fx:id="paymentTable">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="bookingIdColumn" text="Booking ID" prefWidth="100"/>
            <TableColumn fx:id="amountColumn" text="Base Fee" prefWidth="100"/>
            <TableColumn fx:id="additionalServicesFeeColumn" text="Services Fee" prefWidth="100"/>
            <TableColumn fx:id="lateFeeColumn" text="Late Fee" prefWidth="100"/>
            <TableColumn fx:id="totalAmountColumn" text="Total" prefWidth="100"/>
            <TableColumn fx:id="paymentMethodColumn" text="Method" prefWidth="100"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Label text="Booking ID:"/>
        <TextField fx:id="bookingIdField" promptText="e.g., 1"/>
    </HBox>
    <HBox spacing="10">
        <Label text="Payment Method:"/>
        <ChoiceBox fx:id="paymentMethodBox"/>
    </HBox>
    <HBox spacing="10">
        <Label text="Include Additional Services:"/>
        <CheckBox fx:id="additionalServicesCheckBox" text="Yes ($20)"/>
    </HBox>

    <HBox spacing="10">
        <Button fx:id="processButton" text="Process Payment" onAction="#processPayment" styleClass="button"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Search by Booking ID:"/>
        <TextField fx:id="searchField" promptText="Enter booking ID" onAction="#searchPayments"/>
        <Button fx:id="searchButton" text="Search" onAction="#searchPayments" styleClass="button"/>
        <Button fx:id="clearSearchButton" text="Clear Search" onAction="#clearSearch" styleClass="button"/>
    </HBox>

    <HBox spacing="10">
        <Button fx:id="generateInvoiceButton" text="Generate Invoice" onAction="#generateInvoice" styleClass="button"/>
    </HBox>

    <TextArea fx:id="invoiceArea" editable="false" wrapText="true" prefHeight="200"/>
</VBox>